    "description": {
      "type": "richtext"
    },
    "size": {
      "type": "component",
      "repeatable": true,
      "component": "basic.size"
    },
    "color": {
      "type": "component",
      "repeatable": true,
      "component": "basic.color"
    },
    "type": {
